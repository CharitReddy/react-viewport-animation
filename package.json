{
  "name": "react-viewport-animation",
  "version": "0.1.1",
  "type": "module",
  "description": "A react library to add animations to elements when they appear on viewport",
  "repository": {
    "type": "git",
    "url": "https://github.com/CharitReddy/react-viewport-animation"
  },
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "preview": "vite preview",
    "lint:fix": "eslint --fix 'src/**/*.{jsx,ts,tsx}'",
    "format": "prettier --write src//**/*.{ts,tsx,css} --config ./.prettierrc",
    "prepare": "husky install"
  },
  "peerDependencies": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "devDependencies": {
    "@types/node": "^20.5.6",
    "@types/react": "^18.2.15",
    "@types/react-dom": "^18.2.7",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "@vitejs/plugin-react": "^4.0.3",
    "eslint": "^8.45.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.3",
    "husky": "^8.0.3",
    "lint-staged": "^14.0.1",
    "prettier": "^3.0.2",
    "typescript": "^5.0.2",
    "vite": "^4.4.5",
    "vite-plugin-dts": "^3.5.2",
    "vite-plugin-linter": "^2.0.5",
    "vite-tsconfig-paths": "^4.2.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "src/**/*.{js,jsx,ts,tsx}": [
      "npm run lint:fix",
      "npm run format"
    ]
  },
  "files": [
    "dist"
  ],
  "exports": {
    ".": {
      "import": "./dist/react-viewport-animation.es.js",
      "require": "./dist/react-viewport-animation.umd.js"
    },
    "./dist/style.css": "./dist/style.css"
  },
  "main": "./dist/react-viewport-animation.umd.js",
  "module": "./dist/react-viewport-animation.es.js",
  "types": "./dist/index.d.ts",
  "bugs": {
    "url": "https://github.com/CharitReddy/react-viewport-animation/issues"
  },
  "homepage": "https://github.com/CharitReddy/react-viewport-animation#readme",
  "license": "MIT"
}